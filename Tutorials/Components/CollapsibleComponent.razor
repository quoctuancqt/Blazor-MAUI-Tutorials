<div class="row">
    <a href="javascript:void();" @onclick=Toggle class="col-12">@ActionText</a>

    @if (!Collapsed)
    {
        <div class="col-12 card card-body">
            @ChildContent
        </div>
    }

</div>

@code
{
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public bool Collapsed { get; set; }

    string ActionText { get => Collapsed ? "Expand" : "Collapse"; }

    void Toggle()
    {
        Collapsed = !Collapsed;
    }
}